@using MvcCvResume.Entities.Concrete
@model List<Experience>
<section id="experience" class="section section-secondary section-no-border m-0">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="text-color-light text-uppercase font-weight-extra-bold">Deneyimlerim</h2>
                <section class="timeline custom-timeline" id="timeline">
                    <div class="timeline-body">
                        @foreach (var e in Model)
                        {
                            <article class="timeline-box right custom-box-shadow-2">
                                <div class="row">
                                    <div class="experience-info col-lg-3 col-sm-5 bg-color-primary">
                                        <span class="from text-color-light text-uppercase">
                                            <span class="font-weight-semibold">@e.StartDate.ToShortDateString()</span>
                                        </span>
                                        <span class="to text-color-light text-uppercase">
                                            <span class="font-weight-semibold">@if (@e.EndDate is not null)
                                                                               {
                                                                                   @e.EndDate.Value.ToShortDateString()
                                                                               }
                                                                               else { @("...")}</span>
                                        </span>
                                        @{
                                            var today = DateTime.Now;
                                            var startYear = @e.StartDate.Year;
                                            var endYear = 0;
                                            var endMount = 0;
                                            if (e.EndDate is not null)
                                            {
                                                endYear = e.EndDate.GetValueOrDefault().Year - e.StartDate.Year;
                                                endMount = e.EndDate.GetValueOrDefault().Month - e.StartDate.Month;
                                            }
                                            else
                                            {
                                                endYear = today.Year - e.StartDate.Year;
                                                endMount = today.Month - e.StartDate.Month;
                                            }
                                            if (endMount < 0)
                                            {
                                                endMount += 12;
                                                endYear--;
                                            }
                                        }
                                        <p class="text-color-light">( @endYear Yıl  @endMount Ay )</p>
                                       
                                        <span class="company text-color-light font-weight-semibold">
                                            @e.WorkingCompany
                                            <span class="company-location text-color-light font-weight-normal text-uppercase">@e.Title</span>
                                        </span>
                                    </div>
                                    <div class="experience-description col-lg-9 col-sm-7 bg-color-dark">
                                        <h4 class="text-color-light font-weight-semibold">@e.Position</h4>
                                        <p class="custom-text-color-2">@e.Description</p>
                                    </div>
                                </div>
                            </article>
                        }
                        
